{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python",
            "config": {
                "zeroConfig": true,
                "buildCommand": "bash install_playwright.sh"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api.py"
        }
    ],
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "30 3 * * *"
        }
    ]
}